@using Contatos.Enums;
@model UsuarioModel;
    
@{
    ViewData["Title"] = "Adicionar novo Usuario";
}

<div class="text-center">

<h1 class="display-4">Adicionar novo Usuario</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

<div class = "form-group">
    <label for="nome">Nome</label>
    <input type ="text" asp-for ="Nome" class="form-control" placeholder="Digite o nome" />
    @Html.ValidationMessageFor(x => x.Nome)

  </div>

    <div class="form-group">
    <label form="email">Email</label>
    <input type ="email" asp-for ="Email" class="form-control" placeholder="Digite o email" />
      @Html.ValidationMessageFor(x => x.Email)

  </div>

    <div class="form-group">
    <label form="Login">Login</label>
     <input type ="text" asp-for ="Login"  class="form-control" placeholder="Digite o login" />
       @Html.ValidationMessageFor(x => x.Login)
  </div>
  
    <div class="form-group">
    <label form="Senha">Senha</label>
     <input type ="password" asp-for ="Senha"  class="form-control" placeholder="Digite a senha" />
       @Html.ValidationMessageFor(x => x.Senha)
  </div>

      <div class="form-group">
    <label form="Perfil">Perfil</label>
    <select asp-for="Perfil" class="form-control">
          <option value="0">Selecione</option>
          <option value="@PerfilEnum.Admin">Administrador</option>
          <option value="@PerfilEnum.Padrao">Padrão</option>
      </select>

       @Html.ValidationMessageFor(x => x.Perfil)
  </div>
 
<button type ="submit" class="btn btn-primary w-100">Salvar</button>
<a type ="submit" class="btn btn-secondary w-100" asp-controle ="Usuario" asp-action="Index" role="button">Voltar</a>


</form>