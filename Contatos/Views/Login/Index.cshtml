@model LoginModel;

@{
    Layout = "_Layout _Deslog";
    ViewData["Title"] = "Login";
}
   @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
             <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
      @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }


    <h1 class="text-center"> Login</h1>


<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" asp-for ="Login"  class="form-control" id="login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="mb-3">
    <label for="Senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha"  class="form-control" id="Senha">
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  
  <p class="mb-4 text-sm-center mx-auto">Esqueceu a senha? <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir Senha</a></p>



  <button type="submit" class="btn btn-primary w-100">Entrar</button>

</form>